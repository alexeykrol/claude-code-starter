{
  "name": "claude-code-starter",
  "version": "3.1.1",
  "description": "Meta-documentation framework for AI-assisted development with Claude Code",
  "main": "dist/claude-export/cli.js",
  "scripts": {
    "build": "cd src/claude-export && npm run build",
    "build:export": "tsc -p src/claude-export/tsconfig.json --outDir dist/claude-export",
    "dialog:export": "node dist/claude-export/cli.js export",
    "dialog:ui": "node dist/claude-export/cli.js ui",
    "dialog:watch": "node dist/claude-export/cli.js watch",
    "dialog:list": "node dist/claude-export/cli.js list"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "claude",
    "claude-code",
    "anthropic",
    "ai-development",
    "framework",
    "documentation"
  ],
  "author": "Alexey Krol",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexeykrol/claude-code-starter"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
